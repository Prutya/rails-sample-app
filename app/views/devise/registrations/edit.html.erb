<% provide :title, "Edit #{resource_name.to_s.humanize}" %>
<% provide :page_heading, yield(:title) %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:'col-lg-offset-3 col-lg-6', method: :put, multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,  autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="bg-warning">
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <span class="glyphicon glyphicon-info-sign text-info tooltip-activator"
          data-toggle="tooltip"
          data-placement="right"
          title="<%= @minimum_password_length %> characters minimum. Leave blank if you don't want to change it."></span>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <span class="sr-only">Leave blank if you don't want to change it.</span>
    <span class="sr-only"><%= @minimum_password_length %> characters minimum.</span>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <span class="glyphicon glyphicon-info-sign text-info tooltip-activator"
          data-toggle="tooltip"
          data-placement="right"
          title="Your new password again."></span>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update", class: "form-control btn btn-primary" %>
  </div>
<% end %>

<section class="bg-danger col-lg-offset-3 col-lg-6">
  <h3>Cancel my account</h3>
  <p>Unhappy?</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :delete }) do |f| %>
    <%= f.submit "Cancel my account", class: "form-control btn btn-danger", data: { confirm: "Are you sure?" } %>
  <% end %>
</section>
