<% provide(:title, "Forgot password") %>
<% provide(:page_heading, "Forgot your password?") %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:'col-lg-offset-3 col-lg-6', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset password instructions", class: "form-control btn btn-primary"  %>
  </div>
<% end %>

<section class="col-lg-offset-3 col-lg-6">
  <%= render "devise/shared/links" %>
</section>
