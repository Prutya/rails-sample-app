<% provide(:title, "Resend unlock instructions") %>
<% provide(:page_heading, yield(:title)) %>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { class:'col-lg-offset-3 col-lg-6', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Resend unlock instructions", class: "form-control btn btn-primary" %>
  </div>
<% end %>

<section class="col-lg-offset-3 col-lg-6">
  <%= render "devise/shared/links" %>
</section>
